<img src='<%=@image.url%>'/>
<p>
  <strong>Url:</strong>
  <%= @image.url %>
</p>

<p>
  <strong> Alt: </strong>
  <%= @image.alt %>
</p>

<p>
  <strong> Caption: </strong>
  <%= @image.caption %>
</p>

<ul>
  <li><%= link_to 'Edit this image', edit_image_path(@image) %></li>
  <li><%= link_to 'Delete this image', image_path(@image),
                    method: :delete,
                    data: { confirm:"Are you sure?!?!?!" }%></li>
  <li><%= link_to 'Add another image', new_image_path %></li>
  <li><%= link_to 'Image Gallery', images_path %></li>
</ul>
    
    
    
    